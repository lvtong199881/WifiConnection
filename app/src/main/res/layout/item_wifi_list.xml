<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_wifi_item"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_locked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/wifi_lock" />

        <ImageView
            android:id="@+id/iv_signal_strength"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/wifi_signal_level" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/night_model_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_connected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/anquanxing_2"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_ssid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textColor="@color/color_ff8f00"
            tools:text="SSID" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>